<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video API</title>
</head>
<body>
    <h1>Video de YouTube</h1>
    <div id="player"></div>

    <!-- Carga la API de YouTube con tu clave de API -->
    <script src="https://www.youtube.com/iframe_api?key=AIzaSyC3xfv9KmqLtTKKsj_Vw6mFwHwbC01umag"></script>
    <script>
        var player;
        function onYouTubeIframeAPIReady() {
            player = new YT.Player('player', {
                height: '315',
                width: '560',
                videoId: 'YdKl9YppXeY', // ID del video
                playerVars: {
                    'autoplay': 1,
                    'controls': 1
                },
                events: {
                    'onReady': onPlayerReady,
                    'onStateChange': onPlayerStateChange
                }
            });
        }

        function onPlayerReady(event) {
            event.target.playVideo();
        }

        function onPlayerStateChange(event) {
            if (event.data == YT.PlayerState.PLAYING) {
                // Realizar acciones adicionales cuando el video está reproduciéndose
            }
        }
    </script>
</body>
</html>